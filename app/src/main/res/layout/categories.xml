<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main"
    android:background="@android:color/holo_red_light"
    android:onClick="onClickSound1"
    android:contextClickable="false">

    <Space
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Laughing"
        android:id="@+id/laughing"
        android:layout_above="@+id/phrases"
        android:layout_alignLeft="@+id/phrases"
        android:layout_alignStart="@+id/phrases"
        android:layout_marginBottom="26dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Crying"
        android:id="@+id/crying"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Phrases"
        android:id="@+id/phrases"
        android:layout_above="@+id/human"
        android:layout_alignLeft="@+id/human"
        android:layout_alignStart="@+id/human"
        android:layout_marginBottom="27dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Human Nature"
        android:id="@+id/human"
        android:layout_above="@+id/space2"
        android:layout_alignLeft="@+id/crying"
        android:layout_alignStart="@+id/crying" />


</RelativeLayout>
